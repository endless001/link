<div class="account-container container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="text-center mb-4">
              <h4>Reset Password</h4>
                <p class="text-muted mb-4">Reset Password With Chatvia.</p>
            </div>
          <div class="card">
                <div class="card-body p-4">
                    <div class="p-3">
                      @Html.CleanValidationSummary(false)
                      <form asp-controller="Account" asp-action="ResetPassword" method="post">
                          <div class="form-group mb-4">
                                <label>Email</label>
                                <div class="input-group mb-3 bg-soft-light input-group-lg rounded-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text border-light text-muted">
                                            <i class="ri-mail-line"></i>
                                        </span>
                                    </div>
                                    <input type="email" name="email" class="form-control bg-soft-light border-light" placeholder="Enter Email">
                                </div>
                            </div>
                            <div>
                                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Reset</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
