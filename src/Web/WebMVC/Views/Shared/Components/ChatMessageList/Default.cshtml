@using WebMVC.ViewModels
@model List<ChatMessageViewModel>
<!-- Start chat-message-list -->
                            <div class="px-2">
                                <h5 class="mb-3 px-3 font-size-16">Recent</h5>

                                <div class="chat-message-list" data-simplebar>
            
                                    <ul class="list-unstyled chat-list chat-user-list">
                                       @foreach(var chatMessage in Model)
                                       {
                                        <li>
                                            <a href="#">
                                                <div class="media">
                                                    <div class="chat-user-img online align-self-center mr-3">
                                                        <img src="~/images/users/avatar-2.jpg" class="rounded-circle avatar-xs" alt="">
                                                        <span class="user-status"></span>
                                                    </div>
                                                    <div class="media-body overflow-hidden">
                                                        <h5 class="text-truncate font-size-15 mb-1">@chatMessage.ContactName</h5>
                                                        <p class="chat-user-message text-truncate mb-0">@chatMessage.LastMessage</p>
                                                    </div>
                                                    <div class="font-size-11">@chatMessage.LastDate</div>
                                                </div>
                                            </a>
                                        </li>
                                        }
                                    </ul>
                                </div>
                            </div>
<!-- End chat-message-list -->